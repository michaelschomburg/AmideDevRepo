{% if section.settings.display_layout == 'mansonry' %} 
{{ 'isotope.pkgd.min.js' | asset_url | script_tag }}
{% endif %}
<div class="home4-block-collection {% if section.settings.display_layout == 'carousel_center'  %} loadding carousel_center{% endif %}" 
     style="margin:{{section.settings.home_block_4}}">
  {% if section.settings.enable_block_fullwidth %} 
  <div class="full-width">
    {% else %}
    <div class="container">
      {% endif %}
      {% if section.settings.home4_collection_title_wr != blank %}
      <div class="heading-block">
        <h3 class="title">
          {% if settings.enable_multilang %}
          <span class="lang1">{{ section.settings.home4_collection_title_wr | split: '|' | first }}</span>
          <span class="lang2">{{ section.settings.home4_collection_title_wr | split: '|' | last }}</span>
          {% else %}
          {{ section.settings.home4_collection_title_wr | split: '|' | first }}
          {% endif %}
        </h3>

      </div>
      {% endif %}
      <div {% if section.settings.display_layout == 'carousel'  %} id="block-{{section.id}}"{% else %} class="row center slider"{% endif %}>
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {%- case block.settings.width -%}
        {% when '16%' %}
        {%- assign class_width = 'col-md-2' -%}
        {% when '25%' %}
        {%- assign class_width = 'col-md-3' -%}
        {% when '34%' %}
        {%- assign class_width = 'col-md-4' -%}
        {% when '42%' %}
        {%- assign class_width = 'col-md-5' -%}
        {% when '50%' %}
        {%- assign class_width = 'col-md-6' -%}
        {% when '58%' %}
        {%- assign class_width = 'col-md-7' -%}
        {% when '66%' %}
        {%- assign class_width = 'col-md-8' -%}
        {% when '75%' %}
        {%- assign class_width = 'col-md-9' -%}
        {% when '84%' %}
        {%- assign class_width = 'col-md-10' -%}
        {% when '100%' %}
        {%- assign class_width = 'col-md-12' -%}
        {%- endcase -%}
        <div class=" {% if section.settings.display_layout != 'grid_image'  %} {% else %} {{class_width}}{% endif %}{% if section.settings.display_layout != 'mansonry'  %} {% else %} {{class_width}}{% endif %}   {% if section.settings.display_layout == 'carousel_center'  %} col-md-4 {% endif %} home-collection-{{ block.id }}
                    {% if block.settings.home4_position_text_1 == 'left_top' %} left-top{% endif %}" style="padding:{{block.settings.home_block_padding }}">
          <div class="home-collection-item home-collection-item-1">
            {% if block.settings.bg_home4_collection_1 != blank %}
            <a href="{{ block.settings.home4_collection_1 }}">
              <img src="{{ block.settings.bg_home4_collection_1 | img_url: '1024x'  }}">
            </a>
            {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            <div class="home-collection-title-wrapper{% if block.settings.home4_position_text_1 == 'text_relative' %} home4-bottom{% endif %}{% if block.settings.home4_position_text_1 == 'top_center' %} top-center{% endif %}{% if block.settings.home4_position_text_1 == 'left_bottom' %} left-bottom{% endif %}"
                 style="{% if block.settings.home4_position_text_1 == 'milde_center' %}text-align:center;left:50%;top:50%;width:100%;transform: translate(-50%,-50%);-webkit-transform: translate(-50%,-50%);-moz-transform: translate(-50%,-50%);{% endif %}
                        {% if block.settings.home4_position_text_1 == 'left_top' %} left:{{ block.settings.home4_position_text_ofsetx_1 }}px;top:{{ block.settings.home4_position_text_ofsety_1 }}px;{% endif %}
                        {% if block.settings.home4_position_text_1 == 'left_bottom' %}  left:{{ block.settings.home4_position_text_ofsetx_1 }}px;bottom:{{ block.settings.home4_position_text_ofsety_1 }}px;{%endif %} 
                        {% if block.settings.home4_position_text_1 == 'right_top' %} right:{{ block.settings.home4_position_text_ofsetx_1 }}px;top:{{ block.settings.home4_position_text_ofsety_1 }}px;{% endif %}
                        {% if block.settings.home4_position_text_1 == 'right_bottom' %}  right:{{ block.settings.home4_position_text_ofsetx_1 }}px;bottom:{{ block.settings.home4_position_text_ofsety_1 }}px; {% endif %}
                        {% if block.settings.home4_position_text_1 == 'bottom_center' %}text-align:left;left:50%;top:auto;bottom:{{ block.settings.home4_position_text_ofsety_1 }}px;transform: translateX(-50%);-webkit-transform: translateX(-50%);-moz-transform: translateX(-50%);{% endif %}
                        {% if block.settings.home4_position_text_1 == 'top_center' %}text-align:center;left:50%;bottom:auto;top:{{ block.settings.home4_position_text_ofsety_1 }}px;transform: translateX(-50%);-webkit-transform: translateX(-50%);-moz-transform: translateX(-50%);{% endif %}
                        ">
              <div class="home-collection-title" style="text-align:{{block.settings.text_align }}">
                {% if block.settings.home4_collection_title_1 != blank %}
                <h3 class="h5">
                  <a href="{{ block.settings.home4_collection_1 }}">
                    {% if settings.enable_multilang %}
                    <span class="lang1">{{ block.settings.home4_collection_title_1 | split: '|' | first }}</span>
                    <span class="lang2">{{ block.settings.home4_collection_title_1 | split: '|' | last }}</span>
                    {% else %}
                    {{ block.settings.home4_collection_title_1 | split: '|' | first }}
                    {% endif %}
                  </a>
                </h3>
                {% endif %}
                {% if block.settings.home4_collection_subtitle_1 != blank %}
                <p class="sub-title">
                  {% if settings.enable_multilang %}
                  <span class="lang1">{{ block.settings.home4_collection_subtitle_1 | split: '|' | first }}</span>
                  <span class="lang2">{{ block.settings.home4_collection_subtitle_1 | split: '|' | last }}</span>
                  {% else %}
                  {{ block.settings.home4_collection_subtitle_1 | split: '|' | first }}
                  {% endif %}
                </p>
                {% endif %}
                {% if block.settings.home4_collection_textlink_1 != blank %}
                <p class="link-home4">
                  {% if settings.enable_multilang %}
                  <span class="lang1"><a href="{{ block.settings.home4_collection_1 }}">{{ block.settings.home4_collection_textlink_1 | split: '|' | first }}</a></span>
                  <span class="lang2"><a href="{{ block.settings.home4_collection_1 }}">{{ block.settings.home4_collection_textlink_1 | split: '|' | last }}</a></span>
                  {% else %}
                  <a href="{{ block.settings.home4_collection_1 }}">{{ block.settings.home4_collection_textlink_1 | split: '|' | first }}</a>
                  {% endif %}
                </p>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        {% endfor%}
        {% endif %}
      </div>
    </div>
  </div>
  <style>
    .home4-block-collection .home-collection-title-wrapper{background: {{section.settings.bg_content_text}};}
    {% if section.settings.display_background_color %}
    .home4-block-collection .home-collection-item > a:hover:before {opacity: 1;}
    {% endif %}
    .home4-block-collection .link-home4 a{background: {{section.settings.button_label_bg}};color: {{section.settings.button_label_color}} }
    .home4-block-collection .link-home4 a:hover{color: {{section.settings.button_label_color_hover}};background: {{section.settings.button_label_bg_hover}}}
  </style>
  {% if section.settings.display_layout == 'carousel'  %} 
  <script>
    $(document).ready(function() {
      $("#block-{{section.id}}").owlCarousel({
        itemsCustom : [
        [300, 2],
        [360, 2],
        [450, 2],
        [600, 2],
        [700, 3],
        [768, 3],
        [1000, 3],
        [1200, {{ section.settings.home4_collection_carousel_item }}],
        [1400, {{ section.settings.home4_collection_carousel_item }}],
        [1600, {{ section.settings.home4_collection_carousel_item }}]
        ],
        autoPlay : false,
        stopOnHover : false,

        lazyLoad : true,
        lazyFollow : true,
        lazyEffect : "fade",
        pagination : false,

        // Navigation
        navigation : true,
        navigationText : ['<i class="cs-font clever-icon-prev"></i>','<i class="cs-font clever-icon-next"></i>'],
        rewindNav : true,
        scrollPerPage : false,

        });

    })

  </script>
  {% endif %}
  {% if section.settings.display_layout == 'mansonry'  %} 
  <script>
    jQuery(document).ready(function() {
      var outwidth = jQuery('.home4-block-collection .row').width();
      console.log(outwidth);
      var $container = $('.home4-block-collection .row');
      isotope = function () {
        $container.isotope({

          layoutMode: 'masonry', 		
          masonry: {
            columnWidth: 1
          }					
        });
      };

      jQuery(window).resize(isotope); 
    });
    window.onload =  function(){ setTimeout( function(){ isotope();window.onload() },500) };
    jQuery(window).load(function() {         

    });
  </script> 
  {% endif %}
  {% if section.settings.display_layout == 'carousel_center'  %} 
  <script>
    jQuery(document).ready(function() {
      window.onload =  function(){ setTimeout( function(){ jQuery('.home4-block-collection ').removeClass('loadding'); },1000) };

    });
  </script>
  <script type="text/javascript">
    $(document).on('ready', function() {
      $(".center").slick({
        lazyLoad: 'ondemand',
        dots: true,
        infinite: true,
        centerMode: true,
        slidesToShow: {{ section.settings.home4_collection_carousel_item }},
        dots: false,
        centerPadding: '25%',
        arrows: true,autoplay: true,
        autoplaySpeed: 6000,
        nextArrow: '<button type="button" data-role="none" class="slick-next slick-arrow slick-initialized slick-slider" aria-label="Next" role="button" ><i class="cs-font clever-icon-next"></i></button>',
        prevArrow: '<button type="button" data-role="none" class="slick-prev slick-arrow" aria-label="Previous" role="button" ><i class="cs-font clever-icon-prev"></i></button>',
        responsive: [
        {
        breakpoint: 768,
        settings: {
        centerMode: true,
        centerPadding: '20px',
        slidesToShow: {{ section.settings.home4_collection_carousel_item }}
      }
                         }
                         ]
                         });
    })
  </script>
  {{ 'slick.js' | asset_url | script_tag }}
  {% endif %}
