{% if section.settings.image != blank %}
  <style>

    @media screen and (max-width: 600px) {
      .hero--{{ section.id }} {
        background-image: url('{{ section.settings.image | img_url: '600x600' }}');
      }
    }

    @media screen and (min-width: 601px) and (max-width: 1024px) {
      .hero--{{ section.id }} {
        background-image: url('{{ section.settings.image | img_url: '1024x1024' }}');
      }
    }

    @media screen and (min-width: 1025px) and (max-width: 1600px) {
      .hero--{{ section.id }} {
        background-image: url('{{ section.settings.image | img_url: '1600x1600' }}');
      }
    }

    @media screen and (min-width: 1601px) {
      .hero--{{ section.id }} {
        background-image: url('{{ section.settings.image | img_url: '2048x2048' }}');
      }
    }
  </style>
{% endif %}

<div style="height:{{section.settings.height}}; margin:{{section.settings.margin_secction}}" class="hero hero--{{ section.id }} hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}">
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
  <div class="hero__inner">
    <div class="page-width text-center">
      {% if section.settings.title != blank %}
        <h2 class="h1 mega-title{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rte-setting mega-subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn hero__btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
      {% if section.settings.button_label_2 != blank and section.settings.button_link_2 != blank %}
        <a href="{{ section.settings.button_link_2 }}" class="btn hero__btn hero__btn-2">
          {{ section.settings.button_label_2 }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image with text overlay",
  "class": "index-section index-section--flush section",
  "settings": [
	
    {
      "type": "text",
      "id": "height",
      "label": "Section Height",
      "default": "400px"
    },
	
    {
      "type": "text",
      "id": "margin_secction",
      "label": "Margin",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Image with text overlay"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "<p>Use overlay text to give your customers insight into your brand. Select imagery and text that relates to your style and story.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Button label 2"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button link 2"
    }
  ],
  "presets": [
    {
      "name": "Image with text overlay",
      "category": "Image"
    }
  ]
}
{% endschema %}
