{% if section.settings.layout_use == 'mansonry'  %} 
{{ 'isotope.pkgd.min.js' | asset_url | script_tag }}
{% endif %}
<div class="home2-block-category {% if section.settings.layout_use == 'mansonry'  %} mansonry{% endif %}{% if section.settings.layout_use == 'image'  %} home-11{% endif %}{% if section.settings.layout_use == 'background'  %} background-image{% endif %}" style="margin:{{section.settings.home_block_2}};">
  {% if section.settings.enable_block_fullwidth %} 
  <div class="full-width">
    {% else %}
    <div class="container">
      {% endif %}
      <div class="row page-width feature-row ">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {%- case block.settings.width -%}
        {% when '16%' %}
        {%- assign class_width = 'col-md-2 col-xs-12' -%}
        {% when '25%' %}
        {%- assign class_width = 'col-md-3 col-xs-12' -%}
        {% when '34%' %}
        {%- assign class_width = 'col-md-4 col-xs-12' -%}
        {% when '42%' %}
        {%- assign class_width = 'col-md-5 col-xs-12' -%}
        {% when '50%' %}
        {%- assign class_width = 'col-md-6 col-xs-12' -%}
        {% when '58%' %}
        {%- assign class_width = 'col-md-7 col-xs-12' -%}
        {% when '66%' %}
        {%- assign class_width = 'col-md-8 col-xs-12' -%}
        {% when '75%' %}
        {%- assign class_width = 'col-md-9 col-xs-12' -%}
        {% when '84%' %}
        {%- assign class_width = 'col-md-10 col-xs-12' -%}
        {% when '100%' %}
        {%- assign class_width = 'col-md-12 col-xs-12' -%}
        {%- endcase -%}
        <div class="{{class_width}} {% if section.settings.layout_use == 'background'%}section-background{% endif %}" style="
                                                                                                                             {% if section.settings.layout_use == 'background'%}height:{{ block.settings.height }}; background-size:cover;   display: table;width:100%;
                                                                                                                             background-image: url('{{ block.settings.image | img_url: '2048x2048' }}');
                                                                                                                             {% endif %}
                                                                                                                             ">
          {% if section.settings.layout_use != 'background'%}
            {% capture image_layout %}
            <div class="{% if block.settings.layout != 'top' and block.settings.layout != 'bottom'%}feature-row__item {% else %}col-md-12 feature-item{% endif %}">
              {% if block.settings.image != blank %}
              {{ block.settings.image | img_url: '2048x' | img_tag: block.settings.image.alt, 'feature-row__image' }}
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            {% endcapture %}
            {% endif %}
          {% if section.settings.layout_use == 'background'%}
          <div class="container">
            {% endif %}
            <div class="feature-block block-feature-{{ block.id }} {% if section.settings.layout_use == 'background'%}hero__inner {%endif %}"  style="padding:{{ block.settings.home_padding_item }};" >
              <div class=" {% if block.settings.layout != 'top' and block.settings.layout != 'bottom'%}feature-row {% else %} row feature-content{% endif %}">
                {% if block.settings.layout != 'right' and  block.settings.layout != 'bottom' %}
                {{ image_layout }}
                {% endif %}

                <div class="{% if block.settings.layout != 'top' and block.settings.layout != 'bottom'%}feature-row__item {% else %} feature-item col-md-12 {% endif %}feature-row__text feature-row__text--{{ block.settings.layout }}">
                  {% if block.settings.title != blank %}
                  <h2 class="h3" style="color:{{block.settings.color_for_tittle }}">{{ block.settings.title }}</h2>
                  {% endif %}
                  {% if block.settings.text != blank %}
                  <div class="rte-setting featured-row__subtext"><p style="color:{{ block.settings.color_for_text }}">{{ block.settings.text }}</p></div>
                  {% endif %}
                  {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="btn">
                    {{ block.settings.button_label }}
                  </a>
                  {% endif %}
                </div>

                {% if block.settings.layout != 'left' and  block.settings.layout != 'top'%}
                {{ image_layout }}
                {% endif %}
                <style>
                  .feature-block.block-feature-{{ block.id }} .btn{color:{{block.settings.button_label_color}};background:{{block.settings.button_label_bg }};border-color: {{ block.settings.button_label_boder }} }
                  .feature-block.block-feature-{{ block.id }} .btn:hover{color:{{block.settings.button_label_color_hover}};background:{{block.settings.button_label_bg_hover }};border-color: {{ block.settings.button_label_boder_hover }} }
                </style>
              </div>
            </div>
            {% if section.settings.layout_use == 'background'%}
          </div>
          {% endif %}
        </div>
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
  {% if section.settings.layout_use == 'mansonry'  %} 
  <script>
    jQuery(document).ready(function() {
      var outwidth = jQuery('.home2-block-category .page-width').width();
      console.log(outwidth);
      var $container = $('.home2-block-category .page-width');
      isotope = function () {
        $container.isotope({

          layoutMode: 'masonry', 		
          masonry: {
            columnWidth: 1
          }					
        });
      };

      jQuery(window).resize(isotope); 
    });
    window.onload =  function(){ setTimeout( function(){ isotope();window.onload() },500) };
    jQuery(window).load(function() {         

    });
  </script> 
  {% endif %}
